{
  "name": "freeport-promise",
  "description": "A promise to find a free port.",
  "version": "1.0.0",
  "homepage": "https://github.com/achingbrain/freeport-promise",
  "author": "Alex Potsides",
  "exports": {
    ".": {
      "import": "./dist/src/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/achingbrain/freeport-promise"
  },
  "scripts": {
    "lint": "aegir lint",
    "dep-check": "aegir dep-check dist/src/**/*.js dist/test/**/*.js",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "aegir test -f ./dist/test/*.js -f ./dist/test/**/*.js",
    "test:chrome": "npm run test -- -t browser --cov",
    "test:chrome-webworker": "npm run test -- -t webworker",
    "test:firefox": "npm run test -- -t browser -- --browser firefox",
    "test:firefox-webworker": "npm run test -- -t webworker -- --browser firefox",
    "test:node": "npm run test -- -t node --cov",
    "test:electron-main": "npm run test -- -t electron-main",
    "release": "semantic-release"
  },
  "license": "ISC",
  "devDependencies": {
    "aegir": "^36.1.3"
  }
}
